# MongoDB Connection String
MONGO_URI=mongodb://username:password@localhost:27017/soulheads

# JWT Secret for token signing
JWT_SECRET=your-long-secure-jwt-secret-key

# Upstash Redis Configuration
UPSTASH_REDIS_REST_URL=https://your-redis-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token
REDIS_URL=rediss://default:your-password@your-endpoint.upstash.io:6379

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration (comma-separated for multiple domains)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Logging
LOG_LEVEL=info

# Security
ENCRYPTION_KEY=your_strong_encryption_key

# Firebase (optional for production, can use service account file in dev)
FIREBASE_CONFIG={"type":"service_account","project_id":"your-project-id",...}